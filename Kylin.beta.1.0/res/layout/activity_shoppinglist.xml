<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ShoppingListActivity" >
	<Button
        android:id="@+id/btn_shoppinglist_backtoshoppinglistlists"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_shoppinglist_backtoshoppinglistlists_string" />
	
    <TextView
        android:id="@+id/textView_shoppinglist_listname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_below="@id/btn_shoppinglist_backtoshoppinglistlists" />

    <TextView
        android:id="@+id/textView_shoppinglist_listdeadline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_below="@id/textView_shoppinglist_listname" />

    <Button
        android:id="@+id/btn_shoppinglist_add_shoppingitem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_shoppinglist_add_shoppingitem_string"
        android:layout_below="@id/textView_shoppinglist_listdeadline" />

    <ListView
        android:id="@+id/listView_shoppinglist_shoppingitem_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_shoppinglist_add_shoppingitem" >
    </ListView>

</RelativeLayout>