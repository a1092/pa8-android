<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView_prompt_todotask_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/textView_prompt_todotask_name_string"
            android:textAppearance="?android:attr/textAppearanceLarge"  />

        <TextView
            android:id="@+id/textView_prompt_todotask_name_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView_prompt_todotask_users"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/textView_prompt_todotask_users_string"
            android:textAppearance="?android:attr/textAppearanceLarge"  />

        <TextView
            android:id="@+id/textView_prompt_todotask_users_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView_prompt_todotask_deadline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/textView_prompt_todotask_deadline_string"
            android:textAppearance="?android:attr/textAppearanceLarge"  />

        <TextView
            android:id="@+id/textView_prompt_todotask_deadline_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>